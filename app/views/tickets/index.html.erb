<h1 class="my-4">Your Tickets</h1>

<%= link_to 'Create New Ticket', new_ticket_path, class: 'btn btn-primary mb-4' %>

<div class="row">
  <% if @tickets.any? %>
    <% @tickets.each do |ticket| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= ticket.title %></h5>
            <p class="card-text"><strong>Category:</strong> <%= ticket.category %></p>
            <p class="card-text"><%= truncate(ticket.description, length: 100) %></p>
            <p class="card-text text-muted"><small>Submitted on: <%= ticket.created_at.strftime("%B %d, %Y") %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>You have no tickets yet. <%= link_to 'Create one now!', new_ticket_path %></p>
  <% end %>
</div>
