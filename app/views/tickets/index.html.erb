<h1 class="my-4">Tickets Assigned to Your Department</h1>

<div class="row">
  <% if @tickets.any? %>
    <% @tickets.each do |ticket| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= ticket.title %></h5>
            <p class="card-text"><strong>Department:</strong> <%= ticket.department %></p>
            <p class="card-text"><%= truncate(ticket.description, length: 100) %></p>
            <p class="card-text text-muted"><small>Submitted on: <%= ticket.created_at.strftime("%B %d, %Y") %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No tickets assigned to your department at the moment.</p>
  <% end %>
</div>
